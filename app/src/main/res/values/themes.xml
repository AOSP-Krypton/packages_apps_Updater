<resources>
    <!-- Base application theme. -->
    <style name="Theme.Updater.Base" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimaryDark">?attr/colorPrimary</item>
        <item name="buttonStyle">@style/ButtonTheme</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="Theme.Updater" parent="Theme.Updater.Base">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/system_neutral1_50</item>
        <item name="colorSecondary" />
        <item name="colorPrimaryDark">@android:color/system_neutral1_300</item>
        <item name="colorPrimaryVariant">@android:color/system_neutral1_900</item>
        <item name="colorSurface">@android:color/system_neutral1_100</item>
        <item name="colorAccent">@android:color/system_accent1_700</item>
        <item name="colorPrimaryInverse">@color/primary_color_inverse_light</item>
        <item name="android:textColor">@color/primary_color_inverse_light</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="BaseButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:elevation">12dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonTheme" parent="BaseButtonTheme">
        <item name="android:backgroundTint">@android:color/system_neutral1_200</item>
    </style>

    <style name="ButtonThemeInverse" parent="BaseButtonTheme">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:backgroundTint">@color/primary_color_inverse_light</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:windowMinWidthMajor">45%</item>
    </style>
</resources>